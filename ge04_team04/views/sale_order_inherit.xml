<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherit_ge04_team04" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.motorcycle.ge04.team04</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_draft']" position="after">
                <field name="is_new_customer" invisible='1'/>
                <button name="add_discount" string="Appy Discount" type="object" attrs="{'invisible':[('is_new_customer','=', False)]} "/>
            </xpath>
        </field>
    </record>
</odoo>
