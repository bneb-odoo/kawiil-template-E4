<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="product_view_inherit_ge01" model="ir.ui.view"  >
        <field name="name">product.view.inherit.ge01</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after"> 
               <filter name="motorcycles" string="Motorcycles" domain="[('detailed_type', '=' ,'motorcycle')]"/>
            </xpath>
        </field>
       </record>

        <record id="sale.product_template_action" model="ir.actions.act_window" >
                <field name="context">{"search_default_motorcycles":1}</field>
        </record>
    </data>
</odoo>
